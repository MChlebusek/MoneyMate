<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMate.Views.AddTransactionPage">
    <StackLayout>
        <Label Text="Add Transaction" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" />
        <Entry x:Name="DescriptionEntry" Placeholder="Description" Margin="10" />
        <Entry x:Name="AmountEntry" Placeholder="Amount" Margin="10" />
        <DatePicker x:Name="DatePicker" Margin="10" />
        <Entry x:Name="CategoryEntry" Placeholder="Category" Margin="10" />
        <Button Text="Add Transaction" Clicked="OnAddTransactionClicked" HorizontalOptions="FillAndExpand" Margin="10"/>
    </StackLayout>
</ContentPage>